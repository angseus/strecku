extends layout

block content
  if (!user)
    link(rel='stylesheet', href='/css/login.css')
    include login.html
  if (user)
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        a.navbar-brand.page-scroll(href='/') StreckU
        // Collapse it right away, pew!
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-left
            li
              a#dashboard-anchor(href='/') Dashboard
            li
              a#admin-anchor(href="/admin") Admin
          ul.nav.navbar-nav.navbar-right
            li
              a#user-anchor(href='') Logged in as #{user.username}
            li
              a#logout-anchor(href="/logout") Logout
    include dashboard.html
    include footer.html
